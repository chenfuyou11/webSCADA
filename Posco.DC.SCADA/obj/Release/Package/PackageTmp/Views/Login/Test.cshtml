    Layout = "";
}
<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
</head>
<body>
    <div>
       <input  type="text" id="put"/> <img  src="/Login/Verification" id="ming"style="width:50px;height:30px"/>
        <button class="btn-block" id="btn">tijiao</button>
    </div>
</body>
</html>
<script>
    $("#ming").click(function () {
        var b = $(this).attr("src")
        var c = b + "?id=" + Math.round(Math.random() * 100);
        $(this).attr("src", c);
    })
    $("#btn").click(function () {
        var value = $("#put").val();
        $.ajax({
            url: "/Login/JsonTest",
            type:"GET",
            data: { aaa: value },
            success: function (data) {
                if (data == "1") {
                    alert("dui");
                }
                else {
                    alert("0");
                }
            }
        })
    })
</script>