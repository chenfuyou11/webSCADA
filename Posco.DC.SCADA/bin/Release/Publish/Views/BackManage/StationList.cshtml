@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>空压站列表</title>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <link href="~/Content/ListLayui/static/admin/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/ListLayui/static/admin/css/admin.css" rel="stylesheet" />
    <script src="~/Content/ListLayui/static/admin/layui/layui.js"></script>
    <script src="~/Content/ListLayui/static/admin/js/common.js"></script>

</head>
<body>
<br />
<br />
<br />
<div class="demoTable">
    <div class="layui-inline">
        <input class="layui-input" name="Id" id="demoReload" autocomplete="off" placeholder="输入内容" />
    </div>
    <button class="layui-btn" data-type="reload" id="layui-btn">搜索</button>
    <div class="tt" style="float:right">
        <button class="layui-btn layui-btn-normal" id="User" data-id="1" data-url="/BackManage/StationAdd">添加空压站</button>
    </div>
</div>

<table class="layui-hide" id="test" lay-filter="test"></table>
<script type="text/html" id="barDemo">
    <a class="layui-btn layui-btn-xs" data-url="/BackManage/StationModi" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" data-url="/BackManage/Delete" lay-event="del">删除</a>
</script>
</body>
</html>
<script>

    layui.use('table', function () {
        var table = layui.table;
        //方法级渲染
        table.render({
            elem: '#test',
            url: '/BackManage/StationListJson',
            toolbar: '#toolbarDemo',
            cellMinWidth: 80,
            cols: [[
                { field: 'ID', title: 'ID', sort: true},
                { field: 'Code', title: '空压站编码', sort: true },
                { field: 'Name', title: '名称', sort: true },
                { field: 'Introduction', title: '介绍', sort: true },
                { field: 'Latitude', title: '纬度', sort: true },
                { field: 'Longtitude', title: '经度', sort: true },
                { field: 'FactoryID', title: '所属工厂', sort: true },
                { field: 'ClientID', title: '所属客户', sort: true },
                { field: 'GasMainSize', title: '主管道尺寸', sort: true },
                { field: 'DeviceBindMode', title: '连接方式', sort: true },
                { field: 'StationArea', title: '空压站面积', sort: true },
                { field: 'NearGasArea', title: '临近用气区域', sort: true },
                { field: 'StationControlSystem', title: '集控系统', sort: true },
                { field: 'Valid', title: '状态', sort: true },
                { field: 'Remark', title: '备注', sort: true },
               { fixed: 'right', title: '操作', toolbar: '#barDemo' }
            ]],
            id: 'testReload',
            page: true,
            limits:[10,20,30,50,100,1000]
        });
        //监听行工具事件
        table.on('tool(test)', function (obj) {
            var data = obj.data;

            if (obj.event === 'del') {
                var id = data.ID;
                var url = $(this).attr('data-url');
                layer.confirm('真的删除行么', function (index, layero) {
                    $.ajax({
                        url: url,
                        type: "POST",
                        data: { uid: id },
                        success: function (data) {
                            if (data > 0) {
                                layer.close(index);
                                window.location.reload();
                            }
                        }

                    })
                    layer.close(index);
                });
            } else if (obj.event === 'edit') {
                //获取当前iframe的name值
                var iframeObj = $(window.frameElement).attr('name');
                var iframe = $(window.frameElement);
                var id = data.ID;
                var url = $(this).attr('data-url');
                page("编辑空压站", url + "?uid=" + id, iframeObj, w = "700px", h = "620px");
            }
        });

        var $ = layui.$, active = {
            reload: function () {
                var demoReload = $('#demoReload').val();
                var contactReload = $("#contactReload").val();
                var stateReload = $("#stateReload").val();
                //执行重载
                table.reload('testReload', {
                    page: {
                        curr: 1 //重新从第 1 页开始
                    }
                    , where: {
                        code: demoReload,
                    }
                });
            }
        };
        $('.demoTable #layui-btn').on('click', function () {
            var type = $(this).data('type');
            active[type] ? active[type].call(this) : '';
        });
        $('.demoTable #warm').on('click', function () {
            window.location.href = "/BackManage/OutputExcel";
        })
        $('.demoTable #User').on('click', function () {
            var That = $(this);
            var id = That.attr('data-id');
            var url = That.attr('data-url');
            var iframeObj = $(window.frameElement).attr('name');
            //将iframeObj传递给父级窗口
            page("添加", url + "?id=" + id, iframeObj, w = "700px", h = "500px");
            return false;
        })
    })




</script>
